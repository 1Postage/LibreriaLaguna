extends ../layout

block content
    h1 Compras de !{nombre}
    
    table.table.table-hover
        thead
            tr
                th(scope="col") Verif
                th(scope="col") Forma pago
                th(scope="col") MÃ©todo pago
                th(scope="col") Estado
                th(scope="col") Fecha
                th(scope="col") Transporte
                th(scope="col") Total
                th(scope="col") Accion
        tbody
            each compra in compras
                tr
                    td(scope="row") !{compra.verif} 
                    td(scope="row") !{compra.forma}
                    td(scope="row") !{compra.metodo}
                    td(scope="row") !{compra.estado}
                    td(scope="row") !{compra.fecha}
                    td(scope="row") !{compra.transporte}
                    td(scope="row") $!{compra.total}
                    td(scope="row") 
                        a.btn.btn-outline-primary(href="/compras/d/"+compra.comp_id)
                            span +
                    td(scope="row") 
                            if (compra.verif == 0)
                                form(action="/compra/finalizar", , method="POST")
                                    input(type="hidden", name="compra", value=compra.comp_id)
                                    button.btn.btn-success(type="submit") Finalizar
                                a.btn.btn-primary.text-white(href="/compras/e/" + compra.comp_id) Editar

